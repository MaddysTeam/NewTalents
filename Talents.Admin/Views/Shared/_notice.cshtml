@{ 
	var count = NoticeHelper.GetNoticeCount(Html.GetUserProfile().UserId);
	var list = NoticeHelper.GetNoticeList(Html.GetUserProfile().UserId);
}
<div class="notifications">
	<ul>
		<!-- notification: inbox -->
		<li class="notification-item inbox">
			<div class="btn-group">
				<a href="javascript:;" class="dropdown-toggle" data-toggle="dropdown">
					<i class="fa fa-envelope"></i>
					@if (count > 0)
					{
						<span class="count">@count</span>
					}
					<span class="circle"></span>
				</a>

				<ul class="dropdown-menu" role="menu">
					@if (count > 0)
					{
						<li class="notification-header">
							<em>你有 @count 条未读消息 </em>
						</li>
						foreach (var item in list)
						{
							<li class="inbox-item clearfix">
								<a href="@Url.Action("Details", "Notice", new { id = item.NoticeId })">
									<div class="media">
										<div class="media-body">
											<h5 class="media-heading name">@item.CreatorName</h5>
											<p class="text" title="@item.Title">@(item.Title.Length > 18 ? item.Title.Substring(0, 18) + "..." : item.Title)</p>
											<span class="timestamp">@item.CreatedTime.ToString("yyyy-MM-dd HH:mm:ss")</span>
										</div>
									</div>
								</a>
							</li>
						}
					}
					
					<li class="notification-footer left">
						<a href="@Url.Action("List", "Notice")" class="left">更多通知<i class="fa fa-angle-double-right"></i></a>
					</li>
				</ul>
			</div>
		</li>
		<!-- /notification: inbox -->
