@model DaijJihModel
@{ 
	var pageTitle = ViewBag.Title = TeamKeys.DaijJih;
}
<!-- WIDGET TABBED CONTENT -->
<div class="widget">
	<div class="widget-header">
		<h3><i class="fa fa-paperclip"></i> @pageTitle</h3>
		<div class="btn-group widget-header-toolbar">
			<a href="javascript:;" title="焦点" class="btn-borderless btn-focus"><i class="fa fa-eye"></i></a>
			<a href="javascript:;" title="全屏" class="btn-borderless btn-expand"><i class="fa fa-expand"></i></a>
		</div>
	</div>
	<div class="widget-content">
		<div class="form-horizontal">
			<div class="row">
				<fieldset class="col-md-12">
					<div class="form-group">
						@Html.LabelFor(m => m.Memo1, new { @class = "col-md-9 control-label" }) 
						<div class="col-md-3">
							<div class="btn-group btn-group-xs pull-right">
								<button class="btn btn-success btn-add btn-sm" data-toggle="ajax-modal" data-url="@Url.Action("Memo1", "TeamPop")" data-target="#firstModal"><i class="fa fa-edit"></i> <span>编辑</span></button>
							</div>
						</div>
						<div class="col-md-12">
							@Html.TextAreaFor(m => m.Memo1, 5, 5, new { @class = "form-control" })
						</div>
					</div>
					<div class="form-group">
						@Html.LabelFor(m => m.Memo3, new { @class = "col-md-9 control-label" })
						<div class="col-md-3">
							<div class="btn-group btn-group-xs pull-right">
								<button class="btn btn-danger btn-view form-padding btn-xs" data-toggle="ajax-modal" data-url="@Url.Action("AttachmentsView", "DeclarePop", new { id = Html.GetUserProfile().UserId, type = AttachmentsKeys.DaijJih_Memo3 })" data-target="#firstModal" title="查看附件"><i class="fa fa-link"></i>查看附件</button>
								<button class="btn btn-success btn-add btn-sm" data-toggle="ajax-modal" data-url="@Url.Action("Memo3", "TeamPop")" data-target="#firstModal"><i class="fa fa-edit"></i> <span>编辑</span></button>
							</div>
						</div>
						<div class="col-md-12">
							@Html.TextAreaFor(m => m.Memo3, 5, 5, new { @class = "form-control" })
						</div>
					</div>
					<div class="form-group">
						@Html.LabelFor(m => m.Memo2, new { @class = "control-label col-md-9" })
						<div class="col-md-3">
							<div class="btn-group btn-group-xs pull-right">
								<button class="btn btn-danger btn-view form-padding btn-xs" data-toggle="ajax-modal" data-url="@Url.Action("AttachmentsView", "DeclarePop", new { id = Html.GetUserProfile().UserId, type = AttachmentsKeys.DaijJih_Memo2 })" data-target="#firstModal" title="查看附件"><i class="fa fa-link"></i>查看附件</button>
								<button class="btn btn-success btn-add btn-sm" data-toggle="ajax-modal" data-url="@Url.Action("Memo2", "TeamPop")" data-target="#firstModal"><i class="fa fa-edit"></i> <span>编辑</span></button>
							</div>
						</div>
						<div class="col-md-12">
							@Html.TextAreaFor(m => m.Memo2, new { style = "visibility:hidden;position:absolute;", required = "required" })
							<div class="summernote-frame no-padding">
								<div id="sum" class="summernote required" data-whatever="Memo2"></div>
							</div>
							@Html.ValidationMessageFor(m => m.Memo2)
						</div>
					</div>
					
				</fieldset>

			</div>
		</div>
		
	</div>
</div>
<!-- END WIDGET TABBED CONTENT -->
@Html.Partial("../Utilities/_partialJS")