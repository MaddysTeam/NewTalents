@model TeamSpecialCourse
@{
	var pageTitle = ViewBag.Title = TeamKeys.KecShis_Bianj;
}
<!-- WIDGET TABBED CONTENT -->
<div class="widget">
	<div class="widget-header">
		<h3><i class="fa fa-paperclip"></i> @pageTitle</h3>
		<div class="btn-group widget-header-toolbar pull-right">
			<a href="javascript:loadFrag()" class="btn btn-sm btn-info">返回</a>
		</div>
		<div class="btn-group widget-header-toolbar">
			<a href="javascript:;" title="焦点" class="btn-borderless btn-focus"><i class="fa fa-eye"></i></a>
			<a href="javascript:;" title="全屏" class="btn-borderless btn-expand"><i class="fa fa-expand"></i></a>
		</div>
	</div>
	<div class="widget-content">
		@using (Html.BeginForm("KecShis_Bianj", "Team", Model.CourseId == 0 ? null : new { id = Model.CourseId }, FormMethod.Post, new { @class = "form-horizontal", data_after_success = "afterDialogSuccess()" }))
		{
			<div class="row">
				<fieldset class="col-md-6">
					<div class="panel panel-default">
						<div class="panel-heading">
							<h4 class="panel-title">基本信息</h4>
						</div>
						<div class="panel-body">
							@Html.HiddenFor(m => m.CourseId)
							@Html.HiddenFor(m => m.TeamId)
							@Html.HiddenFor(m => m.CreateDate)
							<div class="form-group">
								@Html.LabelFor(m => m.StartDate, new { @class = "control-label col-md-12" })
								<div class="col-md-12">
									<div class="input-group date" data-provide="datepicker" data-date-language="zh-CN" data-date-format="yyyy-mm-dd" data-date-autoclose="true">
										@Html.TextBoxFor(m => m.StartDate, "{0:yyyy-MM-dd}", new { @class = "form-control" })
										<div class="input-group-addon"><i class="fa fa-calendar"></i></div>
									</div>
									@Html.ValidationMessageFor(m => m.StartDate)
								</div>
							</div>
							<div class="form-group">
								@Html.LabelFor(m => m.EndDate, new { @class = "control-label col-md-12" })
								<div class="col-md-12">
									<div class="input-group date" data-provide="datepicker" data-date-language="zh-CN" data-date-format="yyyy-mm-dd" data-date-autoclose="true">
										@Html.TextBoxFor(m => m.EndDate, "{0:yyyy-MM-dd}", new { @class = "form-control" })
										<div class="input-group-addon"><i class="fa fa-calendar"></i></div>
									</div>
									@Html.ValidationMessageFor(m => m.EndDate)
								</div>
							</div>
							<div class="form-group">
								@Html.LabelFor(m => m.Title, new { @class = "col-md-12 control-label" })
								<div class="col-md-12">
									@Html.TextBoxFor(m => m.Title, new { @class = "form-control" })
									@Html.ValidationMessageFor(m => m.Title)
								</div>
							</div>
							<div class="form-group">
								@Html.LabelFor(m => m.CourseTarget, new { @class = "col-md-12 control-label" })
								<div class="col-md-12">
									@Html.TextAreaFor(m => m.CourseTarget, 5, 5, new { @class = "form-control" })
									@Html.ValidationMessageFor(m => m.CourseTarget)
								</div>
							</div>
							<div class="form-group">
								@Html.LabelFor(m => m.TotalCount, new { @class = "col-md-12 control-label" })
								<div class="col-md-12">
									@Html.TextBoxFor(m => m.TotalCount, new { @class = "form-control" })
									@Html.ValidationMessageFor(m => m.TotalCount)
								</div>
							</div>
							<div class="form-group">
								@Html.LabelFor(m => m.MemberCount, new { @class = "col-md-12 control-label" })
								<div class="col-md-12">
									@Html.TextBoxFor(m => m.MemberCount, new { @class = "form-control" })
									@Html.ValidationMessageFor(m => m.MemberCount)
								</div>
							</div>
							<div class="form-group">
								@Html.LabelFor(m => m.MemberRecord, new { @class = "col-md-12 control-label" })
								<div class="col-md-12">
									@Html.TextBoxFor(m => m.MemberRecord, new { @class = "form-control" })
								</div>
							</div>
						</div>
					</div>
				</fieldset>
				<fieldset class="col-md-6">
					<div class="panel panel-default">
						<div class="panel-heading">
							<h4 class="panel-title">具体计划</h4>
						</div>
						<div class="panel-body">
							<div class="form-group">
								@Html.LabelFor(m => m.CoursePlan, new { @class = "col-md-12 control-label" })
								<div class="col-md-12">
									@Html.TextAreaFor(m => m.CoursePlan, 5, 5, new { @class = "form-control" })
								</div>
							</div>
							<div class="form-group">
								@Html.LabelFor(m => m.CourseRecords, new { @class = "col-md-12 control-label" })
								<div class="col-md-12">
									@Html.TextAreaFor(m => m.CourseRecords, 5, 5, new { @class = "form-control" })
								</div>
							</div>
							<div class="form-group">
								@Html.LabelFor(m => m.CourseSummary, new { @class = "col-md-12 control-label" })
								<div class="col-md-12">
									@Html.TextAreaFor(m => m.CourseSummary, 5, 5, new { @class = "form-control" })
								</div>
							</div>
							<div class="form-group">
								@Html.LabelFor(m => m.Remark, new { @class = "col-md-12 control-label" })
								<div class="col-md-12">
									@Html.TextAreaFor(m => m.Remark, 5, 5, new { @class = "form-control" })
								</div>
							</div>
						</div>
					</div>
				</fieldset>
				<div class="form-group">
					<div class="col-md-offset-2">
						<button type="submit" class="btn btn-custom-primary btn-save"><i class="fa fa-save"></i> 保存</button>
					</div>
				</div>
			</div>
		}
	</div>
</div>
<!-- END WIDGET TABBED CONTENT -->
@Html.Partial("../Utilities/_partialJS")

<script>

	function afterDialogSuccess() {
		loadFrag();
	}

</script>