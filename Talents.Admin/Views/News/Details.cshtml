@model News
@{ 
	var pageTitle = ViewBag.Title = "新闻详细";
}
<div class="col-md-10 content-wrapper">
	<div class="row">
		<div class="col-lg-4 ">
			<ul class="breadcrumb">
				<li class="active"><i class="fa fa-home"></i><a href="@Url.Action("Index", "Home")">首页</a></li>
				<li class="active">@pageTitle</li>
			</ul>
		</div>
	</div>

	<!-- main -->
	<div class="content">
		<div class="main-header">
			<h2><i class="fa fa-users"></i> @pageTitle</h2>
			<em></em>
		</div>

		<div class="main-content">

			<!-- widget -->
			<div class="widget">
				<div class="widget-header">
					<h3><i class="fa fa-paperclip"></i> @pageTitle</h3>
					<div class="btn-group widget-header-toolbar">
						<a href="javascript:;" title="焦点" class="btn-borderless btn-focus"><i class="fa fa-eye"></i></a>
						<a href="javascript:;" title="全屏" class="btn-borderless btn-expand"><i class="fa fa-expand"></i></a>
					</div>
					<div class="btn-group widget-header-toolbar pull-right">
						<a href="@Url.Action("List")" class="btn btn-sm btn-info">返回</a>
					</div>
				</div>
				<div class="widget-content">

					<div class="row">

						<fieldset class="col-md-4">
							<div id="showimg" class="show-img">
								@if (Model.ThumbUrl != "")
								{
									<img src="@Model.ThumbUrl" />
								}
							</div>
						</fieldset>

						<fieldset class="col-md-8">

							<h3><strong>@Model.Title</strong> <small>@Model.CreatedTime.ToString("yyyy-MM-dd")</small> </h3>

							<p>
								@Html.Raw(Model.Content)
							</p>
						</fieldset>

					</div>

				</div>
				<!-- /widget content -->
			</div>
			<!-- /widget -->

		</div>
		<!-- /main-content -->
	</div>
	<!-- /main -->
</div>