@model QualityEvalPeriodModel
@{
	var result = Model.Result;
	var items = Model.ResultItems;

	var ZisFaz_DusHuod = EngineManager.GetEvalResult(items, EvalQualityRuleKeys.ZisFaz_DusHuod);

}
<!-- widget -->
<div class="widget">
    <div class="widget-header">
        <h3>教师申报评价结果</h3>
        <div class="btn-group widget-header-toolbar">
            <a href="javascript:;" title="焦点" class="btn-borderless btn-focus"><i class="fa fa-eye"></i></a>
            <a href="javascript:;" title="全屏" class="btn-borderless btn-expand"><i class="fa fa-expand"></i></a>
        </div>
    </div>
    <div class="widget-content">
        <div class="tab-content no-padding">

            <table class="table table-condensed table-striped">
                <tr>
                    <th class="table-col-10p">得分</th>
                    <td><strong class="result-score">@result.Score</strong></td>
                </tr>
                <tr>
                    <th>总分</th>
                    <td>@result.FullScore</td>
                </tr>
                <tr>
                    <th>评分人</th>
                    <td>@result.AccesserName</td>
                </tr>
                <tr>
                    <th>评分时间</th>
                    <td>@result.AccessDate.ToString("yyyy-MM-dd")</td>
                </tr>
            </table>

            <table class="table table-bordered table-striped">
                <thead>
                    <tr>
                        <th class="table-col-20p" colspan="2">评价指标</th>
                        <th class="table-col-20p">考核分类</th>
                        <th>指标项</th>
                        <th class="table-col-10p">分值/统计标准</th>
                    </tr>
                </thead>
                <tbody>
                    <!--读书活动-->
                    <tr>
                        <td colspan="2">读书活动</td>
                        @if (ZisFaz_DusHuod.ChooseValue == "1A")
								{
                            <td>达量质考</td>
                            <td><label>A：高质量的读书心得，达到在刊物上发表的水平</label></td>
                            <td><span>@ZisFaz_DusHuod.ResultValue</span>分</td>
                        }
                        else if (ZisFaz_DusHuod.ChooseValue == "1B")
                        {
                            <td>达量质考</td>
                            <td><label> B：完成读书要求，读书心得内容质量总体较高，值得推荐、交流</label></td>
                            <td><span>@ZisFaz_DusHuod.ResultValue</span>分</td>
                        }
                        else if (ZisFaz_DusHuod.ChooseValue == "1C")
                        {
                            <td>达量质考</td>
                            <td><label> C：完成读书要求，读书心得内容质量总体较好，能看出有价值的内容</label></td>
                            <td><span>@ZisFaz_DusHuod.ResultValue</span>分</td>
                        }
                        else if (ZisFaz_DusHuod.ChooseValue == "1D")
                        {
                            <td>达量质考</td>
                            <td><label> D：读书心得内容质量一般，文字量较少（有的篇幅少于800字）</label></td>
                            <td><span>@ZisFaz_DusHuod.ResultValue</span>分</td>
                        }
                        else if (ZisFaz_DusHuod.ChooseValue == "2A")
                        {
                            <td>减量质考</td>
                            <td><label> A：已完成的任务质量较高，值得推荐、发表</label></td>
                            <td><span>@ZisFaz_DusHuod.ResultValue</span>分</td>
                        }
                        else if (ZisFaz_DusHuod.ChooseValue == "2B")
                        {
                            <td>减量质考</td>
                            <td><label> B：已完成的任务质量一般</label></td>
                            <td><span>@ZisFaz_DusHuod.ResultValue</span>分</td>
                        }
                        else if (ZisFaz_DusHuod.ChooseValue == "2C")
                        {
                            <td>减量质考</td>
                            <td><label> C：没有提交读书心得；或者提交的材料没有价值</label></td>
                            <td>0分</td>
                        }
                    </tr>
                   
                </tbody>
            </table>

			   <table class="table table-bordered table-striped">
					<thead>
						<tr>
							<th class="table-col-20p" colspan="2">专家评价</th>
						</tr>
					</thead>
					<tbody>
						<tr>
							<td>
								@Html.TextArea("Comment", result.Comment, new { @readonly="readonly",@style= " margin:0; padding:0;width:100%; height:100%;" })
							</td>
						</tr>
					</tbody>
				</table>
        </div>
    </div>
</div>
<!-- /widget -->
