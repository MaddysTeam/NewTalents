@model long
<div class="modal-dialog modal-lg">

	<!-- widget -->
	<div class="widget">
		<div class="widget-header">
			<h3><i class="fa fa-edit"></i> 查找导师</h3>
			<div class="btn-group widget-header-toolbar">
				<a href="#" title="关闭" class="btn-borderless" data-dismiss="modal"><i class="fa fa-close"></i></a>
			</div>
		</div>
		<div class="widget-content">

			<form class="form-horizontal" id="FindMaster" action="@Url.Action("FindMaster", "TeamManage")" role="form">
				<div class="row">
					<fieldset class="col-sm-12">
						<input type="hidden" name="memberId" value="@Model" />
						<div class="form-group">
							<label class="control-label col-md-3">导师姓名</label>
							<div class="col-md-6">
								<input type="text" name="name" class="form-control" />
							</div>
							<button class="btn btn-custom-primary">查找</button>
						</div>
					</fieldset>
				</div>
			</form>

			<div class="table-responsive" id="FindResults">
			</div>

		</div>
	</div>
	<!-- end widget -->
</div>
<script>

	$(function () {

		var memberId = @Model;
		var $FindMaster = $('#FindMaster').submit(function (e) {
			e.preventDefault();
			var $this = $(this);
			$.post($this.attr('action'), $this.serialize(), function (data, status) {
				$('#FindResults').html(data);
				$('.btn-assign').on('click', function () {
					var teamId = $(this).parent().data('rowId');
					$.post('/TeamManage/AssignMaster', { memberId: memberId, teamId: teamId}, function(data, status){
						popupMessage(data, {
							success: function () {
								afterDialogSuccess();
							}
						});
					});
				});
			});
		})

	})

	function afterDialogSuccess() {
		$('#firstModal').modal('hide');
		$('#bootgrid').bootgrid('reload');
	}

</script>
