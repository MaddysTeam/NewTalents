@model List<DeclareOrgConst>
@{ 
	var pageTitle = ViewBag.Title = DeclareKeys.ZhidJians_DangaJians;
}
<!-- WIDGET TABBED CONTENT -->
<div class="widget">
	<div class="widget-header">
		<h3><i class="fa fa-paperclip"></i> @pageTitle</h3>
		<div class="btn-group widget-header-toolbar">
			<a href="javascript:;" title="焦点" class="btn-borderless btn-focus"><i class="fa fa-eye"></i></a>
			<a href="javascript:;" title="全屏" class="btn-borderless btn-expand"><i class="fa fa-expand"></i></a>
		</div>
	</div>
	<div class="widget-content">

		<div class="table-responsive">
			<table class="table table-condensed table-striped table-hover">
				<thead>
					<tr>
						<th>内容</th>
						<th>开展情况</th>
						<th>备注</th>
						<th class="width120">操作</th>
					</tr>
				</thead>
				<tbody>
					@foreach (var item in Model)
					{
						<tr>
							<td>@item.Content </td>
							<td>@item.Work</td>
							<td>@item.Remark</td>
							<td>
								<div class="btn-group btn-group-xs pull-right">
									<button class="btn btn-success btn-edit" data-toggle="ajax-modal" data-url="@Url.Action("ZhidJians_DangaJians", "DeclarePop", new { id = item.DeclareOrgConstId })" data-target="#firstModal" title="编辑">编辑</button>
									<button class="btn btn-warning btn-remove" data-url="@Url.Action("RemoveOrgConst", "Declare", new { id = item.DeclareOrgConstId })" title="删除">删除</button>
								</div>
							</td>
						</tr>
					}
				</tbody>
				<tfoot>
					<tr>
						<td colspan="3"></td>
						<td>
							<div class="btn-group btn-group-xs pull-right">
								<button class="btn btn-custom-primary btn-add" data-toggle="ajax-modal" data-url="@Url.Action("ZhidJians_DangaJians", "DeclarePop")" data-target="#firstModal"><i class="fa fa-plus-square"></i> <span>添加</span></button>
							</div>
						</td>
					</tr>
				</tfoot>
			</table>
		</div>

	</div>
</div>
<!-- END WIDGET TABBED CONTENT -->
@Html.Partial("../Utilities/_partialJS")
