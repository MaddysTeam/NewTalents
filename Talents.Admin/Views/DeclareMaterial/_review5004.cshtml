@model DeclareReview
@{
	var typeKey = HttpUtility.UrlDecode(Model.TypeKey);
}
<!-- WIDGET TABBED CONTENT -->
<form action="@Url.Action("ReviewEdit", "DeclareMaterial" )" method="post" class="form-horizontal form-group-sm" role="form" novalidate="novalidate" id="FormIndex" data-after-success="afterDialogSuccess()">
	<input data-val="true" data-val-number="字段 修改周期ID 必须是一个数字。" data-val-required="修改周期ID 字段是必需的。" id="PeriodId" name="PeriodId" type="hidden" value="0">
	<div class="row">
		<fieldset class="col-md-9">
			<div>
				@Html.HiddenFor(m => m.DeclareReviewId)
				@Html.HiddenFor(m => m.TeacherId)
				@Html.HiddenFor(m => m.StatusKey)
				@Html.Hidden("TypeKey", typeKey)
				@Html.HiddenFor(m => m.DeclareTargetPKID)
				<div class="form-group">
					@Html.LabelFor(m => m.DeclareTargetPKID, new { @class = "col-md-2 control-label" })
					<div class="col-md-9">
						<strong>@Html.Label("declare", DeclareKeys.GongzsZhucr)</strong>
						@*@Html.DropDownListFor(m => m.DeclareTargetPKID, DeclareBaseHelper.DeclareTarget.GetSelectList(), new { @class = "form-control" })*@
					</div>
				</div><div class="form-group">
					@Html.Label("teacherName", "姓名", new { @class = "col-md-2 control-label" })
					<div class="col-md-9">
						<strong>@Html.Label("realname", Html.GetUserProfile().RealName)</strong>
					</div>
				</div>
				<div class="form-group">
					@Html.LabelFor(m => m.CompanyId, new { @class = "col-md-2 control-label" })
					<div class="col-md-9">
						@Html.DropDownListFor(m => m.CompanyId, CompanyHelper.GetCompanySelectList(), new { @class = "form-control" })
					</div>
					<strong class="red">*必选项</strong>
				</div>
				<div class="form-group">
					@Html.LabelFor(m => m.DeclareSubjectPKID, new { @class = "col-md-2 control-label" })
					<div class="col-md-9">
						@Html.DropDownListFor(m => m.DeclareSubjectPKID, BzUserProfileHelper.EduSubject.GetSelectList(noneLabel: "-- 未选 --"), new { @class = "form-control" })
					</div>
					<strong class="red">*必选项</strong>
				</div>
				<div class="form-group">
					@Html.LabelFor(m => m.AllowFlowToSchool, new { @class = "col-md-2 control-label" })
					<div class="col-md-9">
						&nbsp;&nbsp;是 @Html.RadioButton("AllowFlowToSchool", Model.AllowFlowToSchool, Model.AllowFlowToSchool, new { @style = "width:15px; height:15px;" })
						&nbsp;&nbsp;否 @Html.RadioButton("AllowFlowToSchool", !Model.AllowFlowToSchool, !Model.AllowFlowToSchool, new { @style = "width:15px; height:15px;" })
					</div>
				</div>
				<div class="form-group">
					@Html.LabelFor(m => m.AllowFlowToDowngrade, new { @class = "col-md-2 control-label" })
					<div class="col-md-9">
						&nbsp;&nbsp;是 @Html.RadioButton("AllowFlowToDowngrade", Model.AllowFlowToDowngrade, Model.AllowFlowToDowngrade, new { @style = "width:15px; height:15px;" })
						&nbsp;&nbsp;否 @Html.RadioButton("AllowFlowToDowngrade", !Model.AllowFlowToDowngrade, !Model.AllowFlowToDowngrade, new { @style = "width:15px; height:15px;" })
					</div>
				</div>
				<div class="form-group">
					@Html.LabelFor(m => m.Reason, new { @class = "col-md-2 control-label" })
					<div class="col-md-9">
						专业发展自我陈述（包括：本人教育理念、实践探索、教书育人成效等。500字左右。）
						@Html.TextAreaFor(m => m.Reason, 20, 10, new { @class = "form-control" })
						@Html.ValidationMessageFor(m => m.Reason)
					</div>
				</div>
			</div>
		</fieldset>
	</div>
	<div class="form-group">
		<div class="col-md-offset-4">
			<button type="submit" id="submit" class="btn btn-lg btn-danger btn-save"><i class="fa fa-save"></i>保存</button>
		</div>
	</div>
</form>
<script>
	function afterDialogSuccess(data) {
		//如果提交则刷新页面
		if ($('#StatusKey').val() != '') {
			location.href = location.href;
		}
		else {
			loadReview('@DeclareTargetIds.GongzsZhucr', '_review5004', '@typeKey')
		}
	}

	$(function () {

		ajaxSubmitForm($('#FormIndex'));

	});

</script>