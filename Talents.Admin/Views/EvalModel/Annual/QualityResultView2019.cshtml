@model QualityEvalPeriodModel
@{
	var result = Model.Result;
	var items = Model.ResultItems;
	var ChoseItems = Model.ChooseItems;

	var SannGuih_ZhidSix = EngineManager.GetEvalResult(items, EvalQualityRuleKeys.SannGuih_ZhidSix);
	//var ZisFaz_KaizShik = EngineManager.GetEvalResult(items, EvalQualityRuleKeys.ZisFaz_KaizShik);


}
<!-- widget -->
<div class="widget">
	<div class="widget-header">
		<h3>考评结果</h3>
		<div class="btn-group widget-header-toolbar">
			<a href="javascript:;" title="焦点" class="btn-borderless btn-focus"><i class="fa fa-eye"></i></a>
			<a href="javascript:;" title="全屏" class="btn-borderless btn-expand"><i class="fa fa-expand"></i></a>
		</div>
	</div>
	<div class="widget-content">
		<div class="tab-content no-padding">

			<table class="table table-condensed table-striped">
				<tr>
					<th class="table-col-10p">得分</th>
					<td><strong class="result-score">@result.Score</strong></td>
				</tr>
				<tr>
					<th>总分</th>
					<td>@result.FullScore</td>
				</tr>
				<tr>
					<th>评分人</th>
					<td>@result.AccesserName</td>
				</tr>
				<tr>
					<th>评分时间</th>
					<td>@result.AccessDate.ToString("yyyy-MM-dd")</td>
				</tr>
			</table>

			<table class="table table-bordered table-striped">
				<thead>
					<tr>
						<th class="table-col-20p">评价指标</th>
						<th class="table-col-20p" colspan="2">评价指标</th>
						<th class="table-col-10p">分值/统计标准</th>
					</tr>
				</thead>
				<tbody>
					<!--读书活动-->
					<tr>
						<td rowspan="4">三年计划</td>
						<td colspan="2">读书活动</td>

						<td><span>@SannGuih_ZhidSix.ResultValue</span>分</td>
					
					</tr>
					@*<!--开展示课-->
					<tr>
						<td rowspan="3"></td>
						<td>开展示课</td>
						@if (ZisFaz_KaizShik.ChooseValue == "1A")
						{
							<td>达量质考</td>
							<td><label> A：高质量、高水准、具有示范性的展示课</label></td>
							<td><span>@ZisFaz_KaizShik.ResultValue</span>分</td>

						}
						
					</tr>
					<!--担任评委工作-->
					<tr>
						<td>担任评委工作</td>
						@if (ZisFaz_DanrPingwGongz.ChooseValue == "1A")
						{
							<td>达量质考</td>
							<td><label> A：专业水平要求很高的市级及以上教育教学评比活动</label></td>
							<td><span>@ZisFaz_DanrPingwGongz.ResultValue</span>分</td>
						}
						
					</tr>
					<!--评比获奖-->
					<tr>
						<td>评比获奖</td>
						@if (ZisFaz_PingbHuoj.ChooseValue == "1A")
						{
							<td>达量质考</td>
							<td><label> A：负责的重大课题或项目获奖；或其他高水准的大奖</label></td>
							<td><span>@ZisFaz_PingbHuoj.ResultValue</span>分</td>
						}
						
					</tr>*@
					
				</tbody>
			</table>

			<table class="table table-bordered table-striped">
				<thead>
					<tr>
						<th class="table-col-20p" colspan="2">专家评价</th>
					</tr>
				</thead>
				<tbody>
					<tr>
						<td>
							@Html.TextArea("Comment", result.Comment, new { @readonly = "readonly", @style = " margin:0; padding:0;width:100%; height:100%;" })
						</td>
					</tr>
				</tbody>
			</table>
		</div>
	</div>
</div>
<!-- /widget -->



				

