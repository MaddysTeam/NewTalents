<!-- logged user and the menu -->
<div class="logged-user">
	<div class="btn-group">
		<a href="#" class="btn btn-link dropdown-toggle" data-toggle="dropdown">
			<span class="name">@Html.GetUserProfile().RealName</span>
			<span class="caret"></span>
		</a>
		<ul class="dropdown-menu dropdown-menu-right" role="menu">
			<li>
				<a href="@Url.Action("Profiles", "Studio")">
					<i class="fa fa-user"></i>
					<span class="text">个人简档</span>
				</a>
			</li>
			<li>
				<a href="@Url.Action("ChgPwd", "Account")">
					<i class="fa fa-lock"></i>
					<span class="text">修改密码</span>
				</a>
			</li>
			<li>
			@using (Html.BeginForm("Logoff", "Account", FormMethod.Post, new { id = "logoutForm" }))
			{
				@Html.AntiForgeryToken()
				<a href="javascript:document.getElementById('logoutForm').submit()" class="link-dark">
					<i class="fa fa-sign-out"></i>
					<span class="text">注销</span>
				</a>
			}
			</li>
		</ul>
	</div>
</div>
<!-- /logged user and the menu -->
