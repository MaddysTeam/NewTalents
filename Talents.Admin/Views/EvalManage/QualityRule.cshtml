@{
	var pageTitle = ViewBag.Title = "质评指标管理";
}
<div class="col-md-10 content-wrapper">
	<div class="row">
		<div class="col-lg-4 ">
			<ul class="breadcrumb">
				<li class="active"><i class="fa fa-home"></i><a href="@Url.Action("Index", "Home")">首页</a></li>
				<li class="active">@pageTitle</li>
			</ul>
		</div>
	</div>

	<!-- main -->
	<div class="content">
		<div class="main-header">
			<h2><i class="fa fa-gear"></i> @pageTitle</h2>
			<em></em>
		</div>

		<div class="main-content">

			<!-- widget -->
			<div class="widget">
				<div class="widget-header">
					<h3><i class="fa fa-paperclip"></i> @pageTitle</h3>
					<div class="btn-group widget-header-toolbar">
						<a href="javascript:;" title="焦点" class="btn-borderless btn-focus"><i class="fa fa-eye"></i></a>
						<a href="javascript:;" title="全屏" class="btn-borderless btn-expand"><i class="fa fa-expand"></i></a>
					</div>
				</div>
				<div class="widget-content">

					<div class="row">
						<div class="form-horizontal">
							<div class="col-sm-4">
								<div class="form-group">
									<label class="col-md-6 control-label">考评周期</label>
									<div class="col-md-6">
										@Html.DropDownList("Periods", null, new { @class = "form-control" })
									</div>
								</div>
							</div>
						</div>
						<div class="form-horizontal">
							<div class="col-sm-4">
								<div class="form-group">
									<label class="col-md-6 control-label">称号</label>
									<div class="col-md-6">
										@Html.DropDownList("Target", DeclareBaseHelper.DeclareTarget.GetSelectList(filter: m => DeclareTargetIds.AllowRule(m.PicklistItemId)), new { @class = "form-control" })
									</div>
								</div>
							</div>
						</div>
						<div class="form-horizontal">
							<div class="col-sm-4">
								<button type="button" class="btn btn-primary btn-load">查看量表</button>
							</div>
						</div>
					</div>

					<div id="evalRule">

					</div>

				</div>
				<!-- /widget content -->
			</div>
			<!-- /widget -->

		</div>
		<!-- /main-content -->
	</div>
	<!-- /main -->
</div>
@section Scripts {
	<script>

		$(function () {

			$('.btn-load').on('click', function (e) {
				e.preventDefault();
				var periodId = $('#Periods').val();
				var targetId = $('#Target').val();

				$.post('/EvalManage/QualityRule', { periodId: periodId, targetId: targetId }, function (data, status) {
					$('#evalRule').html(data);
				});
			});

		})
	</script>
}