@model List<DeclareResume>
@{ 
	var pageTitle = ViewBag.Title = DeclareKeys.ZisFaz_GerJianl;
}
<!-- WIDGET TABBED CONTENT -->
<div class="widget">
	<div class="widget-header">
		<h3><i class="fa fa-paperclip"></i> @pageTitle</h3>
		<div class="btn-group widget-header-toolbar">
			<a href="javascript:;" title="焦点" class="btn-borderless btn-focus"><i class="fa fa-eye"></i></a>
			<a href="javascript:;" title="全屏" class="btn-borderless btn-expand"><i class="fa fa-expand"></i></a>
		</div>
	</div>
	<div class="widget-content">

		<div class="table-responsive">
			<table class="table table-condensed table-striped table-hover">
				<thead>
					<tr>
						<th>时间区间</th>
						<th>单位</th>
						<th>职称、职务</th>
						<th class="width120">操作</th>
					</tr>
				</thead>
				<tbody>
					@foreach (var item in Model)
					{
						<tr>
							<td>@item.DateRegion</td>
							<td>@item.Company</td>
							<td>@item.Title</td>
							<td  style="width:320px">
								<div class="btn-group btn-group-xs pull-right">
									@if (item.IsDeclare)
									{
										<button class="btn btn-warning btn-declare" data-url="@Url.Action("DeclareResume", "DeclareMaterial", new { id = item.DeclareResumeId, isDeclare = false })">取消申报</button>
									}
									else
									{
										<button class="btn btn-warning btn-declare" data-url="@Url.Action("DeclareResume", "DeclareMaterial", new { id = item.DeclareResumeId, isDeclare = true })">申报</button>
									}
									<button class="btn btn-success btn-edit" data-toggle="ajax-modal" data-url="@Url.Action("ZisFaz_GerJianl", "DeclarePop", new { id = item.DeclareResumeId })" data-target="#firstModal" title="编辑">编辑</button>
									<button class="btn btn-warning btn-remove" data-url="@Url.Action("RemoveResume", "Declare", new { id = item.DeclareResumeId })" title="删除">删除</button>
								</div>
							</td>
						</tr>
					}
				</tbody>
				<tfoot>
					<tr>
						<td colspan="3"></td>
						<td>
							<div class="btn-group btn-group-xs pull-right">
								<button class="btn btn-custom-primary btn-add" data-toggle="ajax-modal" data-url="@Url.Action("ZisFaz_GerJianl", "DeclarePop")" data-target="#firstModal"><i class="fa fa-plus-square"></i> <span>添加</span></button>
							</div>
						</td>
					</tr>
				</tfoot>
			</table>
		</div>

	</div>
</div>
<!-- END WIDGET TABBED CONTENT -->
@Html.Partial("../Utilities/_partialJS")
