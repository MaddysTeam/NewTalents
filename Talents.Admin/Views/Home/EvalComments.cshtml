@model List<EvalCommentViewModel>
<div class="row">
	<div class="col-md-12">

		<div class="widget">
			<div class="widget-header">
				<h3><i class="fa fa-tasks"></i> 专家评语</h3>
			</div>
			<div class="widget-content">

				<table class="table table-condensed table-hover">
					<thead>
						<tr>
							<th>评语</th>
							<th class="width-p-15"></th>
						</tr>
					</thead>
					<tbody>
						@{int index = 1;
							foreach (var item in Model)
							{
								<tr>
									<td><strong>专家(@index):</strong></td>
									<td>@item.EvalComment</td>
								</tr>

								index++;
							}
						}
					</tbody>
				</table>

			</div>
		</div>

	</div>
</div>



