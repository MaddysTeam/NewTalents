@model NiandZongjModel
@{ 
	var pageTitle = ViewBag.Title = Model.Key;
}
<!-- WIDGET TABBED CONTENT -->
<div class="widget">
	<div class="widget-header">
		<h3><i class="fa fa-paperclip"></i> @pageTitle</h3>
		<div class="btn-group widget-header-toolbar">
			<a href="javascript:;" title="焦点" class="btn-borderless btn-focus"><i class="fa fa-eye"></i></a>
			<a href="javascript:;" title="全屏" class="btn-borderless btn-expand"><i class="fa fa-expand"></i></a>
		</div>
	</div>
	<div class="widget-content">

		<form action="@Url.Action("NiandZongj", "Declare")" class="form-horizontal form-group-sm">
			<div class="row">
				<fieldset class="col-md-12">
					@Html.HiddenFor(m => m.Key)
					<div class="form-group">
						@Html.LabelFor(m => m.Summary, new { @class = "control-label col-md-12" })
						<div class="col-md-12">
							@Html.TextAreaFor(m => m.Summary, new { style = "visibility:hidden;position:absolute;", required = "required" })
							<div class="summernote-frame no-padding">
								<div id="sum" class="summernote required" data-whatever="Summary"></div>
							</div>
							@Html.ValidationMessageFor(m => m.Summary)
						</div>
					</div>
					<div class="form-group">
						<div class="col-md-offset-2">
							<button type="submit" class="btn btn-custom-primary btn-save"><i class="fa fa-save"></i> 保存</button>
						</div>
					</div>
				</fieldset>
			</div>
		</form>

	</div>
</div>
<!-- END WIDGET TABBED CONTENT -->
@Html.Partial("../Utilities/_partialJS")
