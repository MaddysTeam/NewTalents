@model EvalPeriod

<div class="alert alert-info alert-dismissable">
	<strong>考核区间：</strong> @Model.BeginDate.ToString("yyyy-MM-dd") 至 @Model.EndDate.ToString("yyyy-MM-dd")
	<br />
	<strong>操作区间：</strong> @Model.AccessBeginDate.ToString("yyyy-MM-dd") 至 @Model.AccessEndDate.ToString("yyyy-MM-dd")
</div>

<!-- WIDGET TABBED CONTENT -->
<div class="widget">
	<div class="widget-header">
		<h3>虹口区教育系统教师专业人才梯队 <strong class="red">校评</strong> 指标</h3>
		<ul class="nav nav-tabs pull-right">
			<li class="active"><a href="#tab1" data-toggle="tab"><i class="fa fa-tag"></i> 校内履职</a></li>
			<li><a href="#tab2" data-toggle="tab"><i class="fa fa-tag"></i> 师德</a></li>
		</ul>
	</div>
	<div class="widget-content">
		<div class="tab-content no-padding">

			<!--校内履职-->
			<div class="tab-pane fade in active" id="tab1">

				<table class="table table-bordered table-striped">
					<thead>
						<tr>
							<th class="table-col-10p">评价指标</th>
							<th class="table-col-30p">指标说明</th>
							<th>指标项</th>
							<th class="table-col-10p">分值/统计标准</th>
						</tr>
					</thead>
					<tbody>
						<!--工作量-->
						<tr>
							<td rowspan="4">工作量</td>
							<td rowspan="4">含任教课时量</td>
							<td>A：满工作量</td>
							<td>50分</td>
						</tr>
						<tr>
							<td>B：工作量过半未满</td>
							<td>40分</td>
						</tr>
						<tr>
							<td>C：仅达一半工作量</td>
							<td>25分</td>
						</tr>
						<tr>
							<td>D：不足一半工作量</td>
							<td>15分</td>
						</tr>
						<!--工作质量-->
						<tr>
							<td rowspan="4">工作质量</td>
							<td rowspan="4"></td>
							<td>A：自己足额完成工作任务、达到工作要求，并获得所在单位认可。（须满工作量）</td>
							<td>47分 - 50分</td>
						</tr>
						<tr>
							<td>B：自己完成承担的工作任务、基本达到工作要求，所在单位教职工对其工作基本认可。（工作量须达一半以上）</td>
							<td>32分 - 42分</td>
						</tr>
						<tr>
							<td>C：工作量部分任务长期由他人分担，基本达到工作要求；或工作量仅一半，基本达到工作要求。</td>
							<td>27分 - 30分</td>
						</tr>
						<tr>
							<td>D：承担的工作量不足一半；或未能完成工作量任务；或较多工作未能达到工作要求；或工作量近一半任务由他人承担。</td>
							<td>15分 - 25分</td>
						</tr>
					</tbody>
				</table>

			</div>

			<!--师德-->
			<div class="tab-pane fade" id="tab2">

				<table class="table table-bordered table-striped">
					<thead>
						<tr>
							<th>评价指标</th>
							<th>指标说明</th>
							<th>指标项</th>
							<th>分值/统计标准</th>
						</tr>
					</thead>
					<tbody>
						<!--师德-->
						<tr>
							<td rowspan="3">师德</td>
							<td rowspan="3">不合格情况时，则总得分为0分</td>
							<td>A：无违反师德相关规定的言行</td>
							<td>合格</td>
						</tr>
						<tr>
							<td>B：有违反师德相关禁令的言行，尚未被退出梯队</td>
							<td>基本合格</td>
						</tr>
						<tr>
							<td>C：有违反师德相关规定的言行，应当出梯队</td>
							<td>不合格</td>
						</tr>
					</tbody>
				</table>

			</div>

		</div>
	</div>
</div>
<!-- END WIDGET TABBED CONTENT -->
