@model List<EvalPeriod>
	@{
	var pageTitle = ViewBag.Title = "往期校评";
	}
	<div class="col-md-10 content-wrapper">
		<div class="row">
			<div class="col-lg-4 ">
				<ul class="breadcrumb">
					<li class="active"><i class="fa fa-home"></i><a href="@Url.Action(" Index", "Home" )">首页</a></li>
					<li class="active">@pageTitle</li>
				</ul>
			</div>
		</div>

		<!-- main -->
		<div class="content">
			<div class="main-header">
				<h2><i class="fa fa-gear"></i> @pageTitle</h2>
				<em></em>
			</div>

			<div class="main-content">

				<!-- widget -->
				<div class="widget">
					<div class="widget-header">
						<h3><i class="fa fa-paperclip"></i> @pageTitle</h3>
						<div class="btn-group widget-header-toolbar">
							<a href="javascript:;" title="焦点" class="btn-borderless btn-focus"><i class="fa fa-eye"></i></a>
							<a href="javascript:;" title="全屏" class="btn-borderless btn-expand"><i class="fa fa-expand"></i></a>
						</div>
					</div>
					<div class="widget-content">

						<!-- Grid -->
						<div class="table-responsive">
							<table class="table table-striped table-hover table-dark-header">
								<thead>
									<tr>
										<th>周期名称</th>
										<th>考核区间</th>
										<th>操作区间</th>
										<th class="width180">操作</th>
									</tr>
								</thead>
								<tbody>
									@foreach(var item in Model)
									{
									<tr>
										<td>@item.Name</td>
										<td>@item.BeginDate.ToString("yyyy-MM-dd") 至 @item.EndDate.ToString("yyyy-MM-dd")</td>
										<td>@item.AccessBeginDate.ToString("yyyy-MM-dd") 至 @item.AccessEndDate.ToString("yyyy-MM-dd")</td>
										<td>
											<div class="btn-group btn-group-xs pull-right">
												<a class="btn btn-success" href="@Url.Action("Overview", "SchoolEvalManage" , new { periodId = item.PeriodId })" title="查看">查看</a>
											</div>
										</td>
									</tr>
									}
								</tbody>
							</table>
						</div>
						<!-- end Grid-->

					</div>
					<!-- /widget content -->
				</div>
				<!-- /widget -->

			</div>
			<!-- /main-content -->
		</div>
		<!-- /main -->
	</div>
