								{
									<td>@item.VolumnScore</td>
								}
								else
								{
									<td>-</td>
								}
								@if (item.IsQualityEval)
								{
									<td>@item.QualityScore</td>
								}
								else
								{
									<td>-</td>
								}
								@if (item.IsCharacteristicEval)
								{
									<td>@item.CharacteristicScore</td>
								}
								else
								{
									<td>-</td>
								}*@
