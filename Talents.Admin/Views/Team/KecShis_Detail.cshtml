@model TeamSpecialCourse
@{
	var pageTitle = ViewBag.Title = TeamKeys.KecShis;
}
<!-- WIDGET TABBED CONTENT -->
<div class="widget">
	<div class="widget-header">
		<h3><i class="fa fa-paperclip"></i> @Model.Title</h3>
		<div class="btn-group widget-header-toolbar pull-right">
			<a href="javascript:loadFrag()" class="btn btn-sm btn-info">返回</a>
		</div>
		<div class="btn-group widget-header-toolbar">
			<a href="javascript:;" title="焦点" class="btn-borderless btn-focus"><i class="fa fa-eye"></i></a>
			<a href="javascript:;" title="全屏" class="btn-borderless btn-expand"><i class="fa fa-expand"></i></a>
		</div>
	</div>
	<div class="widget-content">

		<div>

			<!-- Nav tabs -->
			<ul class="nav nav-tabs" role="tablist">
				<li role="presentation" class="active"><a href="#base" aria-controls="base" role="tab" data-toggle="tab">基本信息</a></li>
				<li role="presentation"><a href="#plan" aria-controls="plan" role="tab" data-toggle="tab">具体计划</a></li>
			</ul>

			<!-- Tab panes -->
			<div class="tab-content">
				<div role="tabpanel" class="tab-pane active" id="base">
					<div class="form-horizontal form-group-sm">
						<div class="row">
							<fieldset class="col-md-12">
								<div class="form-group">
									@Html.LabelFor(m => m.Title, new { @class = "col-md-12 control-label" })
									<div class="col-md-12">
										<div class="form-control details-text-richtext">@Model.Title</div>
									</div>
								</div>
								<div class="form-group">
									<label class="col-md-12 control-label">时间段</label>
									<div class="col-md-12">
										<div class="form-control details-text-richtext">@Model.StartDate.ToString("yyyy-MM-dd") 至 @Model.EndDate.ToString("yyyy-MM-dd") </div>
									</div>
								</div>
								<div class="form-group">
									<label class="col-md-12 control-label">参加总人数</label>
									<div class="col-md-12">
										<div class="form-control details-text-richtext">@Model.TotalCount</div>
									</div>
								</div>
								<div class="form-group">
									<label class="col-md-12 control-label">团队学员数</label>
									<div class="col-md-12">
										<div class="form-control details-text-richtext">@Model.MemberCount</div>
									</div>
								</div>
								<div class="form-group">
									@Html.LabelFor(m => m.MemberRecord, new { @class = "col-md-12 control-label" })
									<div class="col-md-12">
										<div class="form-control details-text-richtext">@Model.MemberRecord</div>
									</div>
								</div>
								<div class="form-group">
									@Html.LabelFor(m => m.CourseTarget, new { @class = "col-md-12 control-label" })
									<div class="col-md-12">
										<div class="form-control details-text-richtext">@Model.CourseTarget</div>
									</div>
								</div>
							</fieldset>

						</div>
					</div>
				</div>
				<div role="tabpanel" class="tab-pane" id="plan">
					<div class="form-horizontal form-group-sm">
						<div class="row">
							<fieldset class="col-md-12">
								<div class="form-group">
									@Html.LabelFor(m => m.CoursePlan, new { @class = "col-md-12 control-label" })
									<div class="col-md-12">
										<div class="form-control details-text-richtext">@Model.CoursePlan</div>
									</div>
								</div>
								<div class="form-group">
									@Html.LabelFor(m => m.CourseRecords, new { @class = "col-md-12 control-label" })
									<div class="col-md-12">
										<div class="form-control details-text-richtext">@Model.CourseRecords</div>
									</div>
								</div>
								<div class="form-group">
									@Html.LabelFor(m => m.CourseSummary, new { @class = "col-md-12 control-label" })
									<div class="col-md-12">
										<div class="form-control details-text-richtext">@Model.CourseSummary</div>
									</div>
								</div>
								<div class="form-group">
									@Html.LabelFor(m => m.Remark, new { @class = "col-md-12 control-label" })
									<div class="col-md-12">
										<div class="form-control details-text-richtext">@Model.Remark</div>
									</div>
								</div>
							</fieldset>

						</div>
					</div>
			</div>
		</div>

	</div>
</div>
</div>
<!-- END WIDGET TABBED CONTENT -->
