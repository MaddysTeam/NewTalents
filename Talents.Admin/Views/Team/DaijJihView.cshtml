@model DaijJihModel
@{
	var pageTitle = ViewBag.Title = TeamKeys.DaijJih;
	var id = ViewBag.ID;
}
<!-- WIDGET TABBED CONTENT -->
<div class="widget">
	<div class="widget-header">
		<h3><i class="fa fa-paperclip"></i> @pageTitle</h3>
		<div class="btn-group widget-header-toolbar">
			<a href="javascript:;" title="焦点" class="btn-borderless btn-focus"><i class="fa fa-eye"></i></a>
			<a href="javascript:;" title="全屏" class="btn-borderless btn-expand"><i class="fa fa-expand"></i></a>
		</div>
	</div>
	<div class="widget-content">
		<div class="form-horizontal form-group-sm">
			<div class="row">
				<fieldset class="col-md-12">
					<div class="form-group">
						@Html.LabelFor(m => m.Memo1, new { @class = "col-md-12 control-label" })
						<div class="col-md-12">
							<span class="form-control details-text-white">@Model.Memo1</span>
						</div>
					</div>
					<div class="form-group">
						@Html.LabelFor(m => m.Memo3, new { @class = "col-md-9 control-label" })
						<div class="col-md-3">
							<div class="btn-group btn-group-xs pull-right">
								<button class="btn btn-danger btn-view form-padding btn-xs" data-toggle="ajax-modal" data-url="@Url.Action("AttachmentsView", "DeclarePop", new { id = id, type = AttachmentsKeys.DaijJih_Memo3 })" data-target="#firstModal" title="查看附件"><i class="fa fa-link"></i>查看附件</button>
							</div>
						</div>
						<div class="col-md-12">
							<div class="form-control details-text-richtext">@Html.Raw(Model.Memo3)</div>
						</div>
					</div>
					<div class="form-group">
						@Html.LabelFor(m => m.Memo2, new { @class = "col-md-9 control-label" })
						<div class="col-md-3">
							<div class="btn-group btn-group-xs pull-right">
								<button class="btn btn-danger btn-view form-padding btn-xs" data-toggle="ajax-modal" data-url="@Url.Action("AttachmentsView", "DeclarePop", new { id = id, type = AttachmentsKeys.DaijJih_Memo2 })" data-target="#firstModal" title="查看附件"><i class="fa fa-link"></i>查看附件</button>
							</div>
						</div>
						<div class="col-md-12">
							<div class="form-control details-text-richtext">@Html.Raw(Model.Memo2)</div>
						</div>
					</div>
				</fieldset>
				
			</div>
		</div>
	</div>
</div>
<!-- END WIDGET TABBED CONTENT -->
